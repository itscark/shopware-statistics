{
    "name": "itscark/shopware-task-statistics",
    "version": "1.0.0",
    "description": "Statistiken zu Scheduled Tasks und Message Queue",
    "type": "shopware-platform-plugin",
    "license": "proprietary",
    "authors": [
        {
            "name": "Marc Peternell",
            "email": "shopware@itscark.me",
            "homepage": "https://itscark.me",
            "role": "Manufacturer"
        }
    ],
    "require": {
        "shopware/core": "~6.4.0"
    },
    "require-dev": {
        "roave/security-advisories": "dev-latest",
        "friendsofphp/php-cs-fixer": "^3.2",
        "vimeo/psalm": "^4.10",
        "psalm/plugin-symfony": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "ItsCark\\Shopware\\TaskStatistics\\": "src/"
        }
    },
    "extra": {
        "shopware-plugin-class": "ItsCark\\Shopware\\TaskStatistics\\CarkTaskStatistics",
        "label": {
            "de-DE": "Task Statistiken",
            "en-GB": "Task Statistics"
        },
        "description": {
            "de-DE": "Plugin f√ºr Task Statistiken",
            "en-GB": "Plugin for task statistics"
        },
        "manufacturerLink": {
            "de-DE": "https://itscark.me/",
            "en-GB": "https://itscark.me/"
        }
    },
    "scripts": {
        "fix": "vendor/bin/php-cs-fixer fix  --allow-risky=yes",
        "fix-verbose": "vendor/bin/php-cs-fixer fix -vvv  --allow-risky=yes",
        "psalm": "./vendor/bin/psalm --output-format=phpstorm",
        "psalm-info": "./vendor/bin/psalm --output-format=phpstorm --show-info=true"
    }
}
